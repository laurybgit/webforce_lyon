{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<h1>Article index</h1>
	{% if is_granted('ROLE_USER') %}
		<a href="{{ path('article_new') }}">
			<i class="bi bi-file-plus-fill" style="font-size:3rem"></i><h2 class="fs-1 d-inline">Create new</h2></a>

	{% endif %}

	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Author</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.title }}</td>
					<td>{{ article.description }}</td>
					<td>{{ article.user }}</td>

					<td>
						<a title="Read the article" href="{{ path('article_show', {'id': article.id}) }}">
							<i class="bi bi-folder2-open"></i>
						</a>

						{% if is_granted('EDIT',article) %}
							<a title="Edit the article" href="{{ path('article_edit', {'id': article.id}) }}">
								<i class="bi bi-pencil-square"></i>
							</a>

						{% endif %}

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
