<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-light bg-success">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('home')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active"  href="{{ path('post_index')}}">Les articles</a>
                        </li>
                    </ul>

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <p>Email: {{ app.user.email }}</p> ||
                        <a href="{{ path('app_logout') }}">Se décconecter</a>

                        {% else %}
                            <a href="{{ path('app_login') }}">
                            <button class="btn btn-info"> Se connecter </button>
                            </a>
                            <a href="{{ path('app_register') }}">
                            <button class="btn btn-primary"> S'inscrire </button>
                            </a>
                    {% endif %}
                    </div>
                </div>
                </nav>
        {% endblock %}

        {% block flash %}
        {#
        {{ app.flashes('error')|first }}
        #}


            {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
            
                    {{ message }}
            </div>
            {% endfor  %}
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
            
                    {{ message }}
            </div>
            {% endfor  %}
        
        {% endblock %}

        {% block body %}{% endblock %}
        
    </body>
</html>

